{
  "$schema": "https://raw.githubusercontent.com/danger/peril/master/peril-settings-json.schema",
  "rules": {
    "pull_request": "PerilTest/dangerfiles@org/spellcheck.ts",
    "issues.opened": "PerilTest/dangerfiles@org/hello-world.ts",
    "issues": ["PerilTest/settings@scheduleNow.ts", "PerilTest/settings@logStuff.ts"],
    "pull_request.closed": "loadsmart/peril-settings@rules/delete-merged-pr-branch.ts"
  },
  "repos": {
    "PerilTest/PerilPRTester": {
      "issues.opened": "artsy/artsy-danger@dangerfile.ts"
    },
    "PerilTest/org": {
      "pull_request": "danger/pr.js"
    },
    "PerilTest/settings": {
      "pull_request": "loadsmart/peril-settings@rules/python-prs.ts"
    }
  }
}
